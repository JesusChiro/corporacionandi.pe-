---
import Button from "@/components/ui/Button.astro";
import ToggleTheme from "@/components/ui/ToggleTheme.astro";
import { Astronav, MenuIcon, MenuItems } from "astro-navbar";

const menuitems = [
  {
    title: "Inicio",
    path: "/<",
  },
  {
    title: "Nosotros",
    path: "/nosotros",
  },
  {
    title: "Servicios",
    path: "/servicios",
  },
  {
    title: "Flota",
    path: "/flota",
  },
  {
    title: "Contacto",
    path: "/contacto",
  },
];
const CONTACTO = [
  {
    title: "981 046 120",
    path: "https://wa.me/+51981046120?text=Hola%20quisiera%20informacion%20sobre%20los%20servicios%20que%20brindan",
    img: "/RedesSociales/wsp.svg",
  },
  {
    title: "01 719-2843",
    path: "/nosotros",
    img: "/RedesSociales/phone.svg",
  },
  {
    title: "admin@corporacionandi.pe",
    path: "mailto:admin@corporacionandi.pe?Subject='Solicito%20cotizacion%20del%20servicio%20de",
    img: "/RedesSociales/mail.svg",
  },
];
---

<header
  data-testId="header"
  class="flex flex-col dark:bg-fondolight items-center h-40 p-4 lg:flex-row"
>
  <Astronav>
    <div class="flex h-full items-center justify-between lg:w-1/4">
      <img src="/logocorporacionandi.svg" alt="logo" class="w-2/4 mx-auto" />
      <div class="block lg:hidden">
        <MenuIcon class="h-4 w-4 text-primary" />
      </div>
    </div>
    <MenuItems
      class="hidden items-center lg:mt-0 lg:flex lg:justify-start lg:w-3/4"
    >
      <section class="">
        <ul
          class="flex flex-col h-full items-center font-medium text-2xl w-1/2 lg:flex-row lg:gap-3"
        >
          {
            menuitems.map((item) => (
              <>
                <li>
                  <a
                    aria-label="navigation link"
                    href={item.path}
                    class="flex py-2 hover:text-orange dark:text-primary dark:hover:text-orange lg:px-3"
                  >
                    {item.title}
                  </a>
                </li>
              </>
            ))
          }
        </ul>
      </section>
      <div class="w-full">
        {
          CONTACTO.map((item) => (
            <>
              <button
                type="button"
                class="text-white bg-[#69B025] hover:bg-[#69B025]/90 focus:ring-4 focus:outline-none focus:ring-[#69B025]/50 font-medium rounded-lg text-sm px-5 py-1 text-center inline-flex items-center dark:focus:ring-[#69B025]/55 me-2 mb-2"
              >
                <img src={item.img} alt="" class="mx-auto" />
                {item.title}
              </button>
            </>
          ))
        }
      </div>

      <img src="/Clientes/Contactenos.png" alt="logo" class="" />
    </MenuItems>
  </Astronav>
</header>
